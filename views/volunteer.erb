<h2>Volunteer: <%= @volunteer.name %></h2>

<form action="/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <div class="form-group">
    <label for="volunteer_name">Edit Volunteer Name</label>
    <input id="volunteer_name" name="volunteer_name" type="text" value="<%= @volunteer.name %>">
    <label for="project_id">Edit Project ID#</label>
    <input id="project_id" name="project_id" type="text" value="<%= @volunteer.project_id %>"required>
  </div>

  <div class="form-group">
    <button type="submit">Update volunteer</button>
  </div>
</form>

<form action="/volunteers/<%= @volunteer.id %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="delete">
    <button type="submit">Delete volunteer</button>
  </div>
</form>

<p><a href="/projects">Go back to project list</a></p>
<p><a href="/volunteers">Go back to volunteer list</a></p>